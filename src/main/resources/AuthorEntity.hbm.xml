<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="domain.AuthorEntity" table="Author" schema="dbo" catalog="conference">
        <id name="authorId" column="AuthorID"><generator class="identity"></generator> </id>
        <property name="fullName" column="FullName"/>
        <property name="affiliation" column="Affiliation"/>
        <property name="email" column="Email"/>
    </class>
</hibernate-mapping>