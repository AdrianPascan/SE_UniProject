<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="domain.AuthorEntity" table="Author" schema="dbo" catalog="conference">
        <id name="authorId">
            <column name="AuthorID" sql-type="int"/>
        </id>
        <property name="fullName">
            <column name="FullName" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="affiliation">
            <column name="Affiliation" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="email">
            <column name="Email" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>